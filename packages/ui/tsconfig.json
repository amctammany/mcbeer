{
  "extends": "@mcbeer/tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": false,
    "outDir": "dist",
    "declarationMap": true,
    "declarationDir": "dist",
    "declaration": true,
    "strictFunctionTypes": false,
    "strict": false,
    "preserveSymlinks": true,
    "paths": {
      "src/*": ["./"]
    }
  }

}
